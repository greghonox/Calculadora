BoxLayout:
    orientation:'vertical'
    padding:20
    Label:
        text:"Calculadora"
        size_hint:1,None
        height:30
    TextInput:
        foreground_color: 1,0,0,1
        id: display
        size_hint:.95,None
        height:50
        pos_hint: {'center_x':.5,'center_y':.5}
        
    GridLayout:
        padding:20
        orientation:"horizontal"
        cols:3
        Button:
            text:'1'
            on_press: print ('1 pressionado')
        Button:
            text:'2'
            on_press: print ('2 pressionado')
        Button:
            text:'3'
            on_press: print ('3 pressionado')
        Button:
            text:'4'
            on_press: print ('4 pressionado')
        Button:
            text:'5'
            on_press: print ('5 pressionado')
        Button:
            text:'6'
            on_press: print ('6 pressionado')
        Button:
            text:'7'
            on_press: print ('7 pressionado')
        Button:
            text:'8'
            on_press: print ('8 pressionado')
        Button:
            text:'9'
            on_press: print ('9 pressionado')
        Button:
            text:'+'
            on_press: print ('+ pressionado')
        Button:
            text:'/'
            on_press: print ('/ pressionado')
        Button:
            text:'-'
            on_press: print ('- pressionado')
        Button:
            text:'*'
            on_press: print ('* pressionado')
        Button:
            text:'='
            on_press: print ('= pressionado')
        Image:
            source:"/tmp/logo.png"
